{
  "name": "reactjs-socket-io-chat-app",
  "version": "0.6.9",
  "private": true,
  "scripts": {
    "build": "browserify ./client/app.jsx -t babelify --outfile ./public/js/app.js --fast",
    "watch": "watchify ./client/app.jsx -t babelify --outfile ./public/js/app.js -dv --fast",
    "start": "node app.js",
    "dev": "npm start && npm run watch"
  },
  "dependencies": {
    "express": "^4.13.1",
    "react": "^0.13.3",
    "socket.io": "^1.3.5"
  },
  "devDependencies": {
    "babelify": "^6.1.3",
    "browserify": "^10.2.6",
    "watchify": "latest"
  }
}
